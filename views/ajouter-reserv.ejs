<%- include ('layout/headerUser') %>
    <!DOCTYPE html>
    <html lang="fr">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Réserver une Salle</title>
        <style>
            /* Styles CSS */
            
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                background-color: #f4f4f4;
            }
            
            .container {
                max-width: 800px;
                margin: 20px auto;
                padding: 20px;
                background-color: #fff;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }
            
            h1 {
                color: #333;
                text-align: center;
            }
            
            label {
                display: block;
                margin-bottom: 5px;
            }
            
            input[type="text"],
            input[type="number"],
            input[type="date"],
            input[type="time"],
            input[type="file"],
            button {
                width: 100%;
                padding: 8px;
                margin-bottom: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }
            
            button {
                background-color: #e6cede;
                color: #fff;
                border: none;
                cursor: pointer;
            }
            
            button:hover {
                background-color: #6d376a;
            }
        </style>
    </head>

    <body>
        <div class="container">
            <h1>Résserver une Salle</h1>
            <!-- Formulaire d'ajout de salle -->
            <form id="ajouter-reserv-form" action="/ajouter-reserv" method="POST">

                <label for="Id">Nom salle:</label>
                <input type="text" id="Id" name="Id" required>

                <label for="Nom">Votre prenom:</label>
                <input type="text" id="Nom" name="Nom" required>

                <label for="Capacite">Votre nom :</label>
                <input type="text" id="Capacite" name="Capacite" required>

                <label for="Equipments">Votre E-mail :</label>
                <input type="email" id="Equipments" name="Equipments">

                <label for="Disponibilites">Date de réservation :</label>
                <input type="date" id="Disponibilites" name="Disponibilites" required>

                <label for="heure_debut">Heure de début :</label><br>
                <input type="time" id="heure_debut" name="heure_debut" required><br>

                <label for="heure_fin">Heure de fin :</label><br>
                <input type="time" id="heure_fin" name="heure_fin" required><br>


                <label for="Tarif">Nombre personne :</label>
                <input type="number" id="Tarif" name="Tarif" required>

                <button type="submit">Réserver la Salle</button>
            </form>
        </div>
    </body>

    </html>

